<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddNews">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:text="获取新闻页"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:textSize="30dp"
        android:textStyle="bold"
        android:background="@color/colorPrimary"/>
    <!--类型-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="类型："
            android:gravity="center_horizontal"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/type_add"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:hint="请输入新闻类型"
            android:maxLines="1"
            android:textSize="16dp"
            android:gravity="center_horizontal" />

    </LinearLayout>
    <!--标题-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="标题："
            android:gravity="center_horizontal"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/title_add"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:hint="请输入标题"
            android:maxLines="1"
            android:textSize="16dp"
            android:gravity="center_horizontal" />

    </LinearLayout>
    <!--来源-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="来源："
            android:gravity="center_horizontal"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/from_add"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:hint="请输入来源"
            android:maxLines="1"
            android:textSize="16dp"
            android:gravity="center_horizontal" />

    </LinearLayout>
    <!--内容-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="内容："
            android:gravity="center_horizontal"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/context_add"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:hint="请输入内容"
            android:maxLines="3"
            android:textSize="16dp"
            android:gravity="center_horizontal" />

    </LinearLayout>
    <!--图片1-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="图片1："
            android:gravity="center_horizontal"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/ig1_add"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:hint="请输入图片1链接"
            android:maxLines="1"
            android:textSize="16dp"
            android:gravity="center_horizontal" />

    </LinearLayout>
    <!--图片2-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="图片2："
            android:gravity="center_horizontal"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/ig2_add"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:hint="请输入图片2链接"
            android:maxLines="1"
            android:textSize="16dp"
            android:gravity="center_horizontal" />

    </LinearLayout>
    <!--图片3-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="图片3："
            android:gravity="center_horizontal"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/ig3_add"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:hint="请输入图片3链接"
            android:maxLines="1"
            android:textSize="16dp"
            android:gravity="center_horizontal" />

    </LinearLayout>
    <Button
        android:layout_margin="10dp"
        android:id="@+id/news_add"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:text="发布新闻" />



</LinearLayout>