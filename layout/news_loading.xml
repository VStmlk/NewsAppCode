<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewsLoading">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="148dp"
        android:src="@drawable/news_logo_png"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout

        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="36dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        tools:layout_editor_absoluteX="105dp">

        <EditText
            android:id="@+id/editText2"
            android:maxLength="10"
            android:singleLine="true"
            android:selectAllOnFocus="true"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:background="@drawable/shape"
            android:gravity="center"
            android:hint="请  输  入  账  户"
            android:textColorHint="#8C8787"/>
    </LinearLayout>

    <LinearLayout
        android:selectAllOnFocus="true"
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        tools:layout_editor_absoluteX="0dp">

        <EditText
            android:id="@+id/editText4"
            android:maxLength="10"
            android:singleLine="true"
            android:selectAllOnFocus="true"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:background="@drawable/shape"
            android:gravity="center"
            android:hint="请  输  入  密  码"
            android:textColorHint="#8C8787"/>
    </LinearLayout>

    <TextView
        android:id="@+id/button_register"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="注册"
        android:textColor="#03A9F4"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

    <TextView
        android:id="@+id/noloding"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="游客登陆"
        android:textColor="#03A9F4"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_register"
        app:layout_constraintTop_toTopOf="@+id/button_register" />

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_register"
        app:layout_constraintVertical_bias="0.03">

        <ImageButton
            android:id="@+id/button_load"
            android:layout_width="70dp"
            android:layout_height="73dp"
            android:background="@drawable/shape"
            android:gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/right_icon"
            app:tint="#FFFFFF" />
    </LinearLayout>

    <Button
        android:id="@+id/datatest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:text="datatest"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>